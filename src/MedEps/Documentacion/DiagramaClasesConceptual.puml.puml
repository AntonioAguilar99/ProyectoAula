' Historia cl√≠nica y relaciones
class HistoriaClinica {
    - Paciente paciente
    - List<EvolucionMedica> evoluciones
    - List<Incapacidad> incapacidades
    - List<Autorizacion> autorizaciones
}

class EvolucionMedica {
    - Doctor doctor
    - Date fecha
    - String descripcion
}

class Incapacidad {
    - Doctor doctor
    - Date fechaInicio
    - int dias
    - String motivo
}

class Autorizacion {
    - String tipo
    - String estado
}

class Medicamento {
    - String nombre
    - String dosis
    - String viaAdministracion
}

class EntregaMedicamento {
    - Paciente paciente
    - Medicamento medicamento
    - Date fechaEntrega
}

